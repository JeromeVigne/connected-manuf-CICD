{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "rgLocation": {
        "type": "string"
      },
      "businessUnitCode": {
        "type": "string"
      },
      "plantCode": {
        "type": "string"
      },
      "locationShort": {
        "type": "string"
      },
      "region":{
          "type": "string"
      }
    },
    "variables": {
        "rgName": "[concat('rg-dev-'parameters('locationShort')-'parameters('businessUnitCode'), '-', parameters('plantCode'),'-vconnect')]"
    },
    "resources": [
      {
        "type": "Microsoft.Resources/resourceGroups",
        "apiVersion": "2018-05-01",
        "location": "[parameters('rgLocation')]",
        "name": "[variables('rgName')]"
      }
    ],
    "outputs": {
        "resource_group_name":{
            "type": "string",
            "value": "[variables('rgName')]"
        }
    }
}